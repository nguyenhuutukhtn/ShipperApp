<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:weightSum="3"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="100">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:src="@drawable/store"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="65"
            android:text="Tên cửa hàng"
            android:id="@+id/txt_store_name_activity_main_shipper"
            android:gravity="left|center"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="22">
            <Button
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Nhận đơn"
                android:padding="5dp"
                android:textStyle="bold"
                android:id="@+id/btn_confirm_item_main_shipper"
                android:background="@drawable/rounded_corner_main_shipper"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:weightSum="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="13"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/placeholder" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:text="Nhận:"
                    android:gravity="center|left"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:textColor="#202323"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:text="Địa chỉ cửa hàng"
                    android:id="@+id/txt_origin_activity_main_shipper"
                    android:gravity="center|left"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:textColor="#202323"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="13"
                    android:src="@drawable/placeholder_red"
                    android:scaleType="fitCenter"
                    android:padding="3dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="17"
                    android:text="Giao:"
                    android:gravity="center|left"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:textColor="#202323"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:text="Địa chỉ giao hàng"
                    android:id="@+id/txt_destination_activity_main_shipper"
                    android:gravity="center|left"
                    android:textSize="16sp"
                    android:layout_marginLeft="2dp"
                    android:textColor="#202323"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
